#!/bin/bash

RUN_DIR=/var/vcap/sys/run/nginx_s3ninja
LOG_DIR=/var/vcap/sys/log/nginx_s3ninja
PIDFILE=$RUN_DIR/nginx.pid
CONFIG_DIR=/var/vcap/jobs/nginx_s3ninja/config
source /var/vcap/jobs/nginx_s3ninja/helpers/ctl_setup.sh 'nginx_s3ninja'
source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "nginx_s3ninja"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > $PIDFILE

    <% if_p("syslog_aggregator") do %>
    /var/vcap/packages/syslog_aggregator/setup_syslog_forwarder.sh $CONFIG_DIR
    <% end %>

	<% if properties.syslog_aggregator && properties.syslog_aggregator.address %>
    exec /var/vcap/packages/nginx_s3ninja/sbin/nginx \
         -c $JOB_DIR/config/nginx.conf \
	      > >(tee -a >(logger -p user.info -t vcap.nginx_s3ninja.stdout) $LOG_DIR/nginx_s3ninja.stdout.log) \
	      2> >(tee -a >(logger -p user.error -t vcap.nginx_s3ninja.stderr) $LOG_DIR/nginx_s3ninja.stderr.log)
	<% else %>
    exec /var/vcap/packages/nginx_s3ninja/sbin/nginx_s3ninja \
         -c $JOB_DIR/config/nginx_s3ninja.conf \
	      >> $LOG_DIR/nginx_s3ninja.stdout.log \
	      2>> $LOG_DIR/nginx_s3ninja.stderr.log
	<% end %>
    ;;

  stop)
    #force kill immediately; drain script should have already run
    kill_and_wait $PIDFILE 0 1

    ;;

  *)
    echo "Usage: nginx_ctl {start|stop}"

    ;;

esac
