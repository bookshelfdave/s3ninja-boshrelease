#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/s3ninja/helpers/ctl_setup.sh 's3ninja'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

JAVA_OPTS="-server -Xmx1024m -XX:MaxPermSize=128M -Djava.net.preferIPv4Stack=true"
SHUTDOWN_PORT="9191"
STDOUT="logs/stdout.txt"

case $1 in

  start)
    echo "STARTING S3NINJA"
    pid_guard $PIDFILE $JOB_NAME

    echo "Running java $JAVA_OPTS IPL"
    exec chpst -u vcap:vcap java $JAVA_OPTS IPL >> $STDOUT \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    # store pid in $PIDFILE
    echo $! > $PIDFILE
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: s3ninja_ctl {start|stop}"

    ;;

esac
exit 0
